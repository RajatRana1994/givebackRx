<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_red_giveback"
    android:backgroundTint="@color/light_gray_color_new"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_1x"
    android:layout_marginEnd="@dimen/small_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lblCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:gravity="center"
        android:minLines="2"
        android:text="dfsdfdsfds"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingEnd="5dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_very_small"
        app:layout_constraintEnd_toStartOf="@+id/btnClear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnClear"
        android:layout_width="@dimen/margin_4x"
        android:layout_height="@dimen/margin_4x"
        android:src="@drawable/ic_clear_white_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@+id/lblCategory"
        app:layout_constraintBottom_toBottomOf="@+id/lblCategory"
        android:tint="@color/blue_color_dark"/>


</androidx.constraintlayout.widget.ConstraintLayout>