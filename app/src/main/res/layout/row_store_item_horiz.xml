<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="@dimen/margin_1x"
    android:background="@color/white_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mIvImage"
        android:layout_width="0dp"
        android:background="@drawable/rounded_et_bg"
        android:padding="0.2dp"
        android:layout_height="210dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:padding="@dimen/margin_1x"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_medium"
        app:layout_constraintEnd_toEndOf="@+id/mIvImage"
        app:layout_constraintStart_toStartOf="@+id/mIvImage"
        app:layout_constraintTop_toBottomOf="@+id/mIvImage" />
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:padding="@dimen/margin_1x"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_mediumLarge"
        app:layout_constraintEnd_toEndOf="@+id/mIvImage"
        app:layout_constraintStart_toStartOf="@+id/mIvImage"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />


</androidx.constraintlayout.widget.ConstraintLayout>